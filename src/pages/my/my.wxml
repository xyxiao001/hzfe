<!--pages/my/my.wxml-->
<view class="container">
  <view class="dan">
    <text class="title">单选:</text>
    <view class="lists">
      <view class="item" wx:for="{{dan}}" wx:key="{{item.id}}" data-id="{{item.id}}" data-type="dan" bindtap="preview">
        <text data-id="{{item.id}}" data-type="dan">{{ item.title }}</text>
      </view>
    </view>
  </view>
  <view class="duo">
    <text class="title">多选:</text>
    <view class="lists">
      <view class="item" wx:for="{{duo}}" wx:key="{{item.id}}" data-id="{{item.id}}" data-type="duo" bindtap="preview">
        <text data-id="{{item.id}}" data-type="duo">{{ item.title }}</text>
      </view>
    </view>
  </view>
</view>
