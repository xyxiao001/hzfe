/* pages/show/show.wxss */
.container {
  margin: 0 5%;
}

.title {
  font-size: 50rpx;
  line-height: 80rpx;
  margin-bottom: 15rpx;
}

.des {
  margin-bottom: 15rpx;
}

.type {
  font-size: 34rpx;
  margin-left: 10rpx;
  color: deepskyblue;
}

.vote-list {
  margin-top: 40rpx;
}

.vote-item {
  position: relative;
  display: flex;
  line-height: 100rpx;
  border: 1px solid #deedf8;
  height: 100rpx;
  margin-bottom: 40rpx;
}

.vote-name {
  padding-left: 30rpx;
  width: 60%;
}

.vote-num {
  width: 20%;
}

.vote-prop {
  width: 20%;
}

.vote-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  z-index: -1;
  background-color: #deedf8;
  transition: width 0.5s ease-in-out;
}