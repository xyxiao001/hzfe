/* pages/add/add.wxss */
.container {
  margin: 0 5%;
}

input {
  font-family:-apple-system , BlinkMacSystemFont , "Segoe UI" , Roboto , "Segoe UI" , "Helvetica Neue", "PingFang SC", "Noto Sans" , "Noto Sans CJK SC" , "Microsoft YaHei" , "微软雅黑" , sans-serif;
}

.max-input {
  width: 100%;
  font-size: 45rpx;
  height: 90rpx;
  border-bottom: 1px solid gainsboro;
  margin-bottom: 20px;
}

.des-input {
  font-size: 35rpx;
}

.placeholder {
  color: darkgray;
}

.vote-item {
  display: flex;
}

.item-control {
  width: 60rpx;
}

.item-control image {
  display: block;
  margin: 20rpx 10rpx 0 0;
  width: 40rpx;
  height: 40rpx;
}
  
.item-input {
  font-size: 30rpx;
  width: calc(100% - 60rpx);
}

.add-item{
  display: flex;
}

.add-item image {
  width: 40rpx;
  height: 40rpx;
  margin: 4px 10px 0 0;
}

.add-item text {
  line-height: 55rpx;
  font-size: 35rpx;
  color: #50bfff;
}

.btn {
  margin-top: 20px;
}